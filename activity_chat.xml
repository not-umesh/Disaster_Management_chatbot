<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="#2196F3"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🚨 Disaster Management Chatbot"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/englishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EN"
            android:textSize="12sp"
            android:padding="8dp" />

        <Button
            android:id="@+id/hinglishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HI"
            android:textSize="12sp"
            android:padding="8dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Chat Display -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/chatDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#333333" />

    </ScrollView>

    <!-- Quick Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🌍 Earthquake"
            android:textSize="12sp"
            android:onClick="onEarthquakeClick"
            android:layout_marginEnd="4dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🌊 Flood"
            android:textSize="12sp"
            android:onClick="onFloodClick"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🔥 Fire"
            android:textSize="12sp"
            android:onClick="onFireClick"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🚨 Emergency"
            android:textSize="12sp"
            android:onClick="onEmergencyClick"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- Location Input -->
    <EditText
        android:id="@+id/locationInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="📍 Your location (optional)"
        android:padding="12dp"
        android:background="@android:color/white"
        android:layout_marginBottom="8dp"
        android:textSize="14sp" />

    <!-- Message Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="💬 Ask about disaster safety..."
            android:padding="12dp"
            android:background="@android:color/white"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:background="#4CAF50"
            android:textColor="@android:color/white"
            android:padding="12dp" />

    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loadingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

</LinearLayout>
